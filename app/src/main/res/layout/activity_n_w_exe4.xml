    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NWExe4">

    <TextView
        android:id="@+id/textView44"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#6CDDD0"
