<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="BMI CALCULATION"
        android:textColor="#120101"
        android:textStyle="bold"
        android:textSize="24dp"/>

    <ImageView
        android:id="@+id/app_logo4"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/bmi"/>
    <EditText
        android:id="@+id/height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_logo4"
        android:padding="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:hint="height(in m)"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="17dp"
        android:textStyle="bold"
        android:lines="2"
        />

    <EditText
        android:id="@+id/weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/height"
        android:padding="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:hint="weight(in kg)"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="17dp"
        android:textStyle="bold"
        android:lines="2"
        />


    <Button
        android:id="@+id/calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weight"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/calculate_bmi"
        android:padding="15dp"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:text="Calculate"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/result"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:layout_below="@+id/calculate"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="67dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="399dp"
        android:layout_height="192dp"
        android:layout_below="@+id/calculate"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:text="check your BMI range"
        android:textColor="#F44336"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/textView2"
        android:layout_width="489dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.743"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0" />


</RelativeLayout>